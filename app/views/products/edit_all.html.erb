<%= turbo_frame_tag 'content_frame' do %>
<div>
  <div class="bg-gray-800 p-6 rounded-lg">
    <h1 class="text-2xl text-center mb-4 text-white">Add/Edit Products</h1>

    <%= form_with model: Product.new, url: products_path, data: { turbo_frame: "products_frame" }, html: { class: "flex flex-col items-center space-y-4" } do |form| %>
      <div class="flex flex-col">
        <%= form.label :name, class: "font-bold mb-2 text-white" %>
        <%= form.text_field :name, class: "border-2 border-gray-300 p-2" %>
      </div>

      <div class="flex flex-col">
        <%= form.label :cogs, class: "font-bold mb-2 text-white" %>
        <%= form.number_field :cogs, class: "border-2 border-gray-300 p-2" %>
      </div>

      <%= form.submit "Add product", class: "border-2 border-white hover:border-blue-500 text-white p-2 cursor-pointer" %>
    <% end %>
  </div>

  <%= turbo_frame_tag 'products_frame' do %>
    <div class="flex flex-wrap gap-4 mt-8 items-center justify-center">
      <%= render @products %>
    </div>
  <% end %>
</div>
<% end %>