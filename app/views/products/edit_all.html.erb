<div class="container mx-auto px-4">
  <%= link_to 'Back to Dashboard', dashboard_index_path, class: 'bg-teal-500 text-white p-2 mb-4 inline-block' %>

  <h1 class="text-2xl text-center mb-4 text-teal-700">Edit Products</h1>

  <%= form_with model: Product.new, url: products_path, data: { turbo_frame: "products_frame" }, html: { class: "flex flex-col items-center space-y-4" } do |form| %>
    <div class="flex flex-col">
      <%= form.label :name, class: "font-bold mb-2 text-teal-700" %>
      <%= form.text_field :name, class: "border-2 border-gray-300 p-2" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :cogs, class: "font-bold mb-2 text-teal-700" %>
      <%= form.number_field :cogs, class: "border-2 border-gray-300 p-2" %>
    </div>

    <%= form.submit "Add product", class: "bg-teal-500 text-white p-2" %>
  <% end %>

  <%= turbo_frame_tag 'products_frame' do %>
    <%= render @products %>
  <% end %>
</div>