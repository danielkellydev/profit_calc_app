<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <div class="p-4 sm:p-6">
    <div class="text-sm text-blue-600 font-medium mb-1">Product</div>
    <h2 class="text-lg sm:text-xl text-gray-800 font-semibold mb-2"><%= product.name %></h2>
    <p class="text-gray-600 mb-4 text-sm sm:text-base">COGS: <%= number_to_currency(product.cogs) %></p>
    <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
      <%= link_to 'Edit', edit_product_path(product), class: "inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form_with url: product_path(product), method: :delete, class: "inline" do %>
        <%= submit_tag 'Delete', data: { confirm: 'Are you sure?' }, class: "inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 cursor-pointer w-full sm:w-auto" %>
      <% end %>
    </div>
  </div>
</div>