<div class="bg-white shadow-lg rounded-lg p-4 sm:p-6 mb-6 sm:mb-8">
    <p class="mb-4 text-gray-600 text-sm sm:text-base">Month of <%= Date.today.strftime('%B %Y') %></p>
    
    <!-- Financial Summary Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
      <div class="bg-gray-50 p-3 rounded-lg">
        <p class="text-sm text-gray-600">Total Revenue</p>
        <p class="text-lg sm:text-xl font-bold text-gray-900"><%= number_to_currency(@monthly_total_revenue) %></p>
        <p class="text-xs text-gray-500 mt-1">12-month avg: <%= number_to_currency(@monthly_avg_revenue) %></p>
      </div>
      <div class="bg-gray-50 p-3 rounded-lg">
        <p class="text-sm text-gray-600">COGS</p>
        <p class="text-lg sm:text-xl font-bold text-gray-900"><%= number_to_currency(@monthly_cogs) %></p>
      </div>
      <div class="bg-gray-50 p-3 rounded-lg">
        <p class="text-sm text-gray-600">Gross Profit</p>
        <p class="text-lg sm:text-xl font-bold text-gray-900"><%= number_to_currency(@monthly_profit) %></p>
      </div>
      <% if defined?(@monthly_expenses) %>
      <div class="bg-gray-50 p-3 rounded-lg">
        <p class="text-sm text-gray-600">Monthly Expenses</p>
        <p class="text-lg sm:text-xl font-bold text-gray-900"><%= number_to_currency(@monthly_expenses) %></p>
      </div>
      <div class="bg-gray-50 p-3 rounded-lg sm:col-span-2 lg:col-span-2">
        <p class="text-sm text-gray-600">Net Profit</p>
        <p class="text-xl sm:text-2xl font-bold <%= @monthly_net_profit >= 0 ? 'text-green-600' : 'text-red-600' %>"><%= number_to_currency(@monthly_net_profit) %></p>
        <p class="text-xs text-gray-500 mt-1">12-month avg: <%= number_to_currency(@monthly_avg_profit) %></p>
      </div>
      <% end %>
    </div>

    <div class="border-t pt-4">
      <h3 class="text-lg sm:text-xl font-semibold mb-3 text-gray-800">Revenue by Type</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
        <% @monthly_sale_type_revenues.each do |sale_type_revenue| %>
        <div class="flex justify-between py-1">
          <span class="text-gray-700 text-sm sm:text-base"><%= sale_type_revenue[:name] %>:</span>
          <span class="font-medium text-sm sm:text-base"><%= number_to_currency(sale_type_revenue[:revenue]) %></span>
        </div>
        <% end %>
      </div>
    </div>

    <div class="mt-6">
      <%= link_to "Monthly History", monthly_history_dashboard_index_path, class: "inline-flex items-center justify-center w-full sm:w-auto px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500", data: { turbo_action: 'replace', turbo_frame: 'content_frame' } %>
    </div>
</div>