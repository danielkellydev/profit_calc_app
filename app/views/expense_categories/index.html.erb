<%= turbo_frame_tag 'content_frame' do %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Expense Categories</h1>
    <%= link_to "New Category", new_expense_category_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <% if @expense_categories.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Expenses</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @expense_categories.each do |category| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= link_to category.name, expense_category_path(category), class: "text-blue-600 hover:text-blue-900" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= truncate(category.description, length: 50) if category.description %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= category.expenses.count %> expenses
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "Edit", edit_expense_category_path(category), class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
                <%= link_to "Delete", expense_category_path(category), method: :delete,
                    confirm: "Are you sure?", class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500 text-lg">No expense categories yet.</p>
        <%= link_to "Create your first category", new_expense_category_path, class: "mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded inline-block" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to "← Back to Expenses", expenses_path, class: "text-blue-600 hover:text-blue-900", data: { turbo_frame: 'content_frame', turbo_action: 'replace' } %>
  </div>
</div>
<% end %>