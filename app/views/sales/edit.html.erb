<turbo-frame id="sales_record_frame">
  <%= form_with model: @sale, url: sale_path(@sale), method: :patch, class: "space-y-6" do |form| %>
    <%= form.fields_for :sale_items do |sale_item_form| %>
      <div class="flex flex-col">
        <%= sale_item_form.label :quantity, "Product #{sale_item_form.object.product.name} Quantity", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= sale_item_form.number_field :quantity, class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <%= sale_item_form.hidden_field :product_id, value: sale_item_form.object.product.id %>
      </div>
    <% end %>

    <div class="flex flex-col">
      <%= form.label :sale_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :sale_type, class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :total_received, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :total_received, class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <%= form.submit "Update Sale", class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  <% end %>
</turbo-frame>