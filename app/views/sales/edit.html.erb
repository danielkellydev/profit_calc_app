<turbo-frame id="sales_record_frame">
  <%= form_with model: @sale, url: sale_path(@sale), method: :patch, class: "space-y-4" do |form| %>
    <%= form.fields_for :sale_items do |sale_item_form| %>
      <div class="flex flex-col">
        <%= sale_item_form.label :quantity, "Product #{sale_item_form.object.product.name} Quantity", class: "font-bold text-lg" %>
        <%= sale_item_form.number_field :quantity, class: "border-2 rounded-lg p-2" %>
        <%= sale_item_form.hidden_field :product_id, value: sale_item_form.object.product.id %>
      </div>
    <% end %>

    <div class="flex flex-col">
      <%= form.label :sale_type, class: "font-bold text-lg" %>
      <%= form.text_field :sale_type, class: "border-2 rounded-lg p-2" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :total_received, class: "font-bold text-lg" %>
      <%= form.number_field :total_received, class: "border-2 rounded-lg p-2" %>
    </div>

    <%= form.submit "Update Sale", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</turbo-frame>