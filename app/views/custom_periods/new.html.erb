<%= turbo_frame_tag 'custom' do %>
  <div class="bg-white shadow-lg rounded-lg p-6 mb-8">
    <h1 class="text-2xl font-semibold mb-6 text-gray-800">New Custom Period</h1>

    <%= form_with(model: @custom_period, local: true, class: "space-y-4") do |form| %>
      <% if @custom_period.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Error:</strong>
          <ul>
            <% @custom_period.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <div>
        <%= form.label :start_date, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :start_date, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <div>
        <%= form.label :end_date, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :end_date, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <div class="pt-5">
        <%= form.submit "Create Custom Period", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <%= link_to 'Back', custom_periods_path, class: "mt-3 inline-block text-sm text-indigo-600 hover:text-indigo-900", data: { turbo_frame: 'custom' } %>
  </div>
<% end %>