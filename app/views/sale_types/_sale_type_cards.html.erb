<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 mb-6">
  <% @sale_types.each do |sale_type| %>
    <div class="sale-type-card bg-gray-50 rounded-lg p-3 sm:p-4 shadow-sm cursor-pointer hover:bg-gray-100 transition-colors"
         data-action="click->sale#selectSaleType"
         data-sale-target="saleTypeCard"
         data-sale-type-id="<%= sale_type.id %>">
      <h3 class="text-base sm:text-lg font-medium text-gray-700 text-center"><%= sale_type.name %></h3>
    </div>
  <% end %>
</div>