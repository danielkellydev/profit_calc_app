<%= form_with(model: sale_type, local: true, class: 'space-y-6', data: { controller: 'xero-sync' }) do |form| %>
  <% if sale_type.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(sale_type.errors.count, "error") %> prohibited this sale type from being saved:
          </h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% sale_type.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :name, class: 'mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
  </div>

  <% if current_user.xero_access_token.present? %>
    <div class="bg-gray-50 p-4 rounded-lg space-y-4">
      <h3 class="text-sm font-medium text-gray-900">Xero Integration</h3>
      
      <div>
        <%= form.check_box :sync_to_xero, class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded', 
            data: { action: 'change->xero-sync#toggleSync' } %>
        <%= form.label :sync_to_xero, 'Sync sales of this type to Xero', class: 'ml-2 text-sm text-gray-700' %>
      </div>

      <div id="xero-account-fields" class="<%= sale_type.sync_to_xero? ? '' : 'hidden' %> space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700">Select Bank Account for Payment</label>
          <p class="text-xs text-gray-500 mb-2">Where the money goes (e.g., Cash on Hand, Business Checking)</p>
          <select id="xero-account-select" 
                  class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                  data-action="change->xero-sync#selectAccount">
            <option value="">Loading bank accounts...</option>
          </select>
          <%= form.hidden_field :xero_account_code %>
          <%= form.hidden_field :xero_account_name %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700">Revenue Account Code (Optional)</label>
          <p class="text-xs text-gray-500 mb-2">Leave blank to use default (200). Or use custom codes like 201 for cash sales, 202 for online sales</p>
          <%= form.text_field :xero_revenue_account_code, 
              placeholder: "e.g., 200, 201, 202", 
              class: 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-yellow-50 p-4 rounded-lg">
      <p class="text-sm text-yellow-800">
        Connect to Xero in <%= link_to "Settings", settings_path, class: "underline font-medium" %> to enable automatic syncing of sales.
      </p>
    </div>
  <% end %>

  <div>
    <%= form.submit class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
  </div>
<% end %>